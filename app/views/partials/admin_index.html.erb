<% if @pictures %>
  <div class="container">
    <% displayed_pictures = @pictures + Array.new(@pictures.size%3) %>
    <% displayed_pictures.each_slice(3) do |slice| %>
    <div class="row">
      <% slice.each do |picture| %>
        <div class="col">
          <div class="photo photo_img">
            <%= link_to image_tag(picture.image.url(:medium)), edit_picture_path(picture) if picture.present? %>
          </div>
        </div>
      <% end %>
    <% end %>
    </div>
  </div>
<% else %>
  <div>
    <a style="text-align: center;">There is no photos under consideration</a>
  </div>
<% end %>
